{
  "name": "Shortner",
  "description": "Extension for shortening URL'S",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://*/*",
    "http://*/*",
    "https://www.google.com/*",
    "*://*.google.com/",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
 
  "icons": {
    "16": "./assests/logo.png",
    "48": "./assests/logo.png",
    "128": "./assests/logo.png"
  }
}
